# CI/CD Dockerfile - expects artifact to be extracted in current directory
FROM python:3.12-slim AS final

# Set working directory
WORKDIR /app

# Install runtime dependencies for Kafka
RUN apt-get update && apt-get install -y --no-install-recommends \
    librdkafka1 \
    && rm -rf /var/lib/apt/lists/*

# Copy artifact contents (built by CI/CD pipeline)
# The pipeline extracts the artifact which contains src/ directory
COPY ./src ./src
COPY ./requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Set Python to run in unbuffered mode for better logging
ENV PYTHONUNBUFFERED=1

# Create a non-root user for security
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Set the working directory to src where app.py is located
WORKDIR /app/src

# Run the application
CMD ["python", "-u", "app.py"]